{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "zeroConfig": true
      }
    }
  ],
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "astro",
  "regions": ["sfo1"],
  "cleanUrls": true,
  "public": true,
  "github": {
    "silent": true,
    "autoJobCancelation": true
  },
  "functions": {
    "api/**/*": {
      "runtime": "nodejs18.x"
    }
  }
}
